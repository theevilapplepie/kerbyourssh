#!/bin/bash

REALM="EXAMPLE.REALM"
#USER=override

if [ -z "`klist | grep krbtgt | grep -vi expired`" ]; then
  echo -e "Welcome $USER! Start of the day eh? Lets get you logged in ;)"
  env KRB5_CONFIG="~/bin/s_support/krb5.conf" kinit $USER@$REALM
fi
echo "Logging into $1 as $USER"
env KRB5_CONFIG="~/bin/s_support/krb5.conf" ssh $USER@$1
